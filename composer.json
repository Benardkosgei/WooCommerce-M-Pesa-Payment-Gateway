{
    "name": "yourname/woocommerce-mpesa-gateway",
    "description": "M-PESA payment gateway for WooCommerce using Safaricom Daraja API",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "homepage": "https://yourwebsite.com"
        }
    ],
    "keywords": [
        "wordpress",
        "woocommerce",
        "mpesa",
        "payment-gateway",
        "safaricom",
        "daraja",
        "kenya",
        "mobile-money"
    ],
    "homepage": "https://github.com/yourusername/woocommerce-mpesa-gateway",
    "support": {
        "issues": "https://github.com/yourusername/woocommerce-mpesa-gateway/issues",
        "source": "https://github.com/yourusername/woocommerce-mpesa-gateway"
    },
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "WooCommerce\\MpesaGateway\\": "includes/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=vendor/ .",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php --ignore=vendor/ .",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    }
}
